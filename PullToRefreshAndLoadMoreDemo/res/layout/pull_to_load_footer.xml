<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/view_ptl_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="0dp" >

        <ProgressBar
            android:id="@+id/progress_ptl_loading"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:indeterminateDrawable="@anim/pull_progress_rotate"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_ptl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_up_to_load"
            android:textColor="@color/pull_to_refresh_title"
            android:textSize="@dimen/pull_to_refresh_title" />
    </LinearLayout>

</LinearLayout>